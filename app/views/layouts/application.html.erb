<!DOCTYPE html>
<html>

<head>
    <title>Repas</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
    <!--     fonts
 -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,700;0,800;1,300;1,400;1,500;1,700;1,800&display=swap" rel="stylesheet">
</head>

<body class=" <%='full-page' if controller.action_name == 'home' %> ">
    <%= render 'shared/navbar' %>
    <% if notice %>
    <p class="notice">
        <%= notice %>
    </p>
    <% end %>
    <% if alert %>
    <p class="alert">
        <%= alert %>
    </p>
    <% end %>
    <%= yield %>
</body>

</html>
